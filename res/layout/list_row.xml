<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	
	android:id="@+id/list_row_LL_root"
	
	android:orientation="horizontal"
	
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	
	android:minHeight="70dp"
	
	>

    <ImageView
        android:id="@+id/list_row_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        
        android:id="@+id/list_row_LL_2"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            
            android:id="@+id/list_row_LL_3"
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:orientation="horizontal" 
            
            >

            <TextView
                android:id="@+id/list_row_tv_file_name"
                
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                
                android:layout_weight="1"
                android:background="@color/white"
                
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20dp" 
                
                />

            <TextView
                android:id="@+id/list_row_tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:layout_weight="0.3"
                
                android:gravity="center"
                
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                
                android:text="00:00" 
                android:textSize="20dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/list_row_tv_file_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            
            android:text="File info" 
            android:textSize="20dp"
            
            />

        <TextView
            android:id="@+id/list_row_tv_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
			android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            
            android:text="Memos" 
            android:textSize="20dp"
            
            />
    </LinearLayout>

</LinearLayout>
